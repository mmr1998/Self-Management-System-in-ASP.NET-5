@model IEnumerable<SelfManagement.Models.Expense>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"> Create New Item</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Expense Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exp in Model)
                {
                <tr>
                    <td>@exp.ExpenseItem</td>
                    <td>@exp.Amount</td>
                    <td>@exp.ExpenseType.Name</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Update" asp-route-id="@exp.ExpenseId" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-id="@exp.ExpenseId" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items found on DB!</p>
    }
</div>

